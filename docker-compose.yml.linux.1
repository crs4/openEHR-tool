version: '3'
services:
    openehrtool:
        build: 
          context: .
          dockerfile: ./Dockerfile
        image: surfercrs4/openehrtool
        volumes:
            - .:/code
        network_mode: host
        env_file:
            - ./.env.dev
        depends_on:
            - redis        

    redis:
        image: redis:alpine
        command:  redis-server  /redis.conf
        ports:
        - 6379:6379
        volumes:
        - ./redis.conf:/redis.conf
