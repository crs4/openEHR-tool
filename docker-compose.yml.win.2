version: '3'
services:
    openehrtool:
        build: 
          context: .
          dockerfile: ./Dockerfile
        image: surfercrs4/openehrtool
        volumes:
            - .:/code
        env_file:
            - ./.env.dev
        depends_on:
            - redis
        ports:
            - 9000:9000        
        networks:
            - mynet

    redis:
        image: redis:alpine
        command:  redis-server  /redis.conf
        volumes:
        - ./redis.conf:/redis.conf
        networks:
            - mynet

networks:
       mynet:
         name: ehrbase_ehrbase-net
         external: true

